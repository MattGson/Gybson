{
    "name": "gybson",
    "version": "0.9.0",
    "description": "Generate a type-safe database client from a SQL database",
    "keywords": [
        "postgres",
        "mysql",
        "schema",
        "typescript",
        "sql",
        "orm"
    ],
    "main": "build/src/query-client/index.js",
    "types": "build/src/query-client/index.d.ts",
    "scripts": {
        "lint": "eslint ./src",
        "build": "tsc",
        "docker:start": "docker-compose up -d",
        "docker:stop": "docker-compose down",
        "dependency-check": "dependency-check . --entry src/Generator/cli/gybson.js --missing --no-dev",
        "test:pg": "DB=pg tsnd --files --transpile-only -r tsconfig-paths/register ./test/helpers/introspect.ts && DB=pg jest --runInBand",
        "test:mysql": "DB=mysql tsnd --files --transpile-only -r tsconfig-paths/register ./test/helpers/introspect.ts && DB=mysql jest --runInBand",
        "semantic-release": "semantic-release",
        "prepare": "npm run build",
        "typecheck": "tsc --p ./tsconfig.typecheck.json"
    },
    "bin": {
        "gybson": "build/src/cli/gybson.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MattGson/Gybson.git"
    },
    "bugs": {
        "url": "https://github.com/MattGson/Gybson/issues"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "author": "Matt Goodson <matt.goodson.business@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/pg": "^7.14.5",
        "@types/faker": "^4.1.12",
        "@types/fs-extra": "^9.0.1",
        "@types/jest": "^26.0.7",
        "@types/lodash": "^4.14.157",
        "@types/url-parse": "^1.4.3",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "dependency-check": "^2.6.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.22.0",
        "faker": "^4.1.0",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "ts-jest": "^24.2.0",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.0",
        "knex": "^0.21.2",
        "promise-mysql": "^4.1.3",
        "pg": "^8.4.1",
        "relational-schema": "^0.4.1"
    },
    "dependencies": {
        "dataloader": "^2.0.0",
        "fs-extra": "^9.0.1",
        "lodash": "^4.17.19",
        "prettier": "^2.2.1",
        "winston": "^3.3.3",
        "yargs": "^17.0.1"
    },
    "peerDependencies": {
        "knex": "^0.21.2",
        "promise-mysql": "^4.1.3",
        "pg": "^8.4.1",
        "relational-schema": "^0.4.1"
    }
}
